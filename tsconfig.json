{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",

    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false, // Consider setting to true for stricter type checking
    "noImplicitAny": false, // Consider setting to true for stricter type checking
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": "./src", // Set the base directory for module resolution
    "paths": {
      "@src/*": ["*"], // Define the alias for the src directory
      "@prisma/*": ["prisma/*"] // Example: Alias for Prisma folder, adjust as necessary
    }
  }
}
